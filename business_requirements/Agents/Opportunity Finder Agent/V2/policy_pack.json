[
  {
    "id": "policy_unit_price_reduction_v2",
    "category": "Price-Based",
    "intents": [
      "detect_unit_price_reduction_opportunity"
    ],
    "trigger": {
      "signals": [
        {
          "name": "unit_price_vol_weighted_p90_vs_p10_variance",
          "source": "spend.txn",
          "calc": "(p90 - p10)/p50",
          "comparison": ">=",
          "threshold": 0.12
        },
        {
          "name": "repeat_supplier_non_declining_price",
          "source": "spend.txn",
          "calc": "month_over_month_change",
          "comparison": ">=",
          "threshold": 0.0
        }
      ],
      "window": "last_365_days",
      "min_observations": 25
    },
    "conditions": {
      "must_have": [
        "active_contract"
      ],
      "exclude": [
        "in_flight_negotiation",
        "price_protection_clause_active"
      ]
    },
    "evidence_requirements": [
      "line_level_txns",
      "contract_clause_refs",
      "volume_forecast"
    ],
    "logic": {
      "decision": "flag_if_all_required_signals_met"
    },
    "scoring": {
      "weights": {
        "impact": 0.55,
        "confidence": 0.25,
        "time_to_realise": 0.1,
        "risk": 0.1
      }
    },
    "guardrails": {
      "external_claims": {
        "ban_phrases": [
          "benchmark",
          "market rate",
          "peer average"
        ],
        "transform": "ask_for_strongest_pricing"
      }
    },
    "actions": [
      {
        "type": "open_opportunity_record"
      },
      {
        "type": "handoff_to_negotiation",
        "drafting_template_suggestions": [
          "bafo_light_refresh_v1"
        ],
        "require_human_gate": true
      },
      {
        "type": "write_audit_log"
      }
    ]
  },
